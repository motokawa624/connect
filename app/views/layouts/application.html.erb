<!DOCTYPE html>
<html>
  <head>
    <title>Connect</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <nav class='nav navbar-nav navbar-left' >
        <div class="header-logo">
          <% unless user_signed_in? %>
            <%= link_to root_path do %>
              <ul class="nav navbar-nav">
                <li><%= image_tag("/assets/logo.png", alt: "ロゴ", :size =>'70x50') %></li>
                <li class="logo-text"><p class="connect">connect</p></li>
              </ul>
            <% end %>
          <% else %>
            <%= link_to teams_path do %>
              <ul class="nav navbar-nav">
                <li><%= image_tag("/assets/logo.png", alt: "ロゴ", :size =>'70x50') %></li>
                <li class="logo-text"><p class="connect">connect</span></li>
            </ul>
            <% end %>
          <% end %>
        </div>
      </nav>

      <div class="header-nav">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to new_team_path, class: "nav-link" do %>
                <i class="fas fa-plus-circle"></i>チームを作る
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class: "nav-link" do %>
                <i class="fas fa-users"></i>メンバー
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to teams_path, class: "nav-link" do %>
                <i class="far fa-handshake"></i>チーム
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
                <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: "nav-link" do %>
                <i class="fas fa-user-plus"></i>ユーザー登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to user_session_path, class: "nav-link" do %>
                <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
              </li>
          <% end %>
        </ul>
      </div>





    </header>
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
  <footer class="footer">
    <p><span class="footer-right">©2020 connect</span></p>
  </footer>
</html>
