<%= render "users/sidebar", user: current_user %>
<div class="container">
	<div class = "row">
			<%= form_for(@team) do |f| %>

		    <div class="col-md-3"></div> <!-- 空div -->
        <div class="col-md-2">
		  		<%= f.label :name, "チーム名  (必須)" %>
		  	</div>
		  	<div class="col-md-7">
		  		<%= f.text_field :name %>
    		</div>

    		<div class="col-md-3"></div> <!-- 空div -->
        <div class="col-md-2">
			  	<%= f.label :place, "エリア" %>
			  </div>
			  <div class="col-md-7">
			  	<%= f.text_field :place %>
				</div>

    		<div class="col-md-3"></div> <!-- 空div -->
        <div class="col-md-2">
			  	<%= f.label :introduction, "説明  (必須)"%>
			  </div>
			  <div class="col-md-7">
			  	<%= f.text_area :introduction %>
			  </div>

    		<div class="col-md-3"></div> <!-- 空div -->
        <div class="col-md-2">
			    <%= f.label :url, "github url"%>
			  </div>
			  <div class="col-md-7">
			    <%= f.text_field :url %>
			  </div>

    		<div class="col-md-3"></div> <!-- 空div -->
        <div class="col-md-2">
			    <%= f.label :tag_list %>
			  </div>
			  <div class="col-md-7">
			    <%= f.text_field :tag_list, value: @team.tag_list.join(',') %>
			  </div>

			  <div class="col-md-3"></div> <!-- 空div -->
        <div class="col-md-2">
			  	<%= f.label :team_imege %>
			  </div>
			  <div class="col-md-7">
			    <%= f.attachment_field :team_image %>
			  </div>

			  <%= f.submit "更新する", class: 'btn btn-primary col-xs-6'%>
			<% end %>

	</div>
</div>
