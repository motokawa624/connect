<%= render "users/sidebar", user: current_user %>
<div class="container">
  <div>

      <% @teams.each do |team| %>
        <div class ="col-md-3 box-content">
          <div>
            <%= link_to team do %>
              <%= attachment_image_tag(team, :team_image, format: 'jpeg', size: "100×100", fallback: "/assets/no_image.jpg") %>
            <% end %>
          </div>
          <div>
            <%= team.name %>
          </div>
          <div>
            <%= team.place %>
          </div>
          <div>
            <!-- truncateは文字量を丸めるヘルパー -->
          <%= truncate(team.introduction, length: 10) %>
          </div>
          <!-- favoriteコントローラーにはチームの記述がないので、クラスの中でチームidを指定する。 -->
          <div class=<%="team_#{team.id}"%>>
            <%= render "favorites/like", team: team %>
          </div>



        </div>
    <% end %>
  </div>
</div>