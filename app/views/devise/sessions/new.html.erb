<div class="container">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="sign-field">
      <div class="col-md-3"></div> <!-- 空div -->
      <div class="col-md-2">
        <%= f.label :メールアドレス %><br />
      </div>
      <div class="col-md-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true %>
      </div>
    </div>

    <div class="sign-field">
      <div class="col-md-3"></div> <!-- 空div -->
      <div class="col-md-2">
        <%= f.label :パスワード %><br />
      </div>
      <div class="col-md-7">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true %>
      </div>
    </div>

    <div class="sign-field">
      <div class="col-md-5"></div> <!-- 空div -->
      <div class="col-md-3">
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
      </div>
    </div>
    <% end %>

    <div class="sign-field">
      <div class="col-md-4"></div> <!-- 空div -->
      <div class="col-md-7">
        <%= f.submit "ログイン", class: "btn btn-success", style: "padding: 5px 80px 5px;" %>
      </div>
    </div>
  <% end %>

    <div class="sign-field">
      <div class="col-md-4"></div><!-- 空div -->
      <div class="col-md-8">
      <%= link_to user_github_omniauth_authorize_path do %>
        <button type="button" style='width: 220px;', class="btn btn-primary"><i class="fab fa-github"></i>   githubでログイン</button>
      <% end %>
      </div>
    </div>

    <div class="col-md-5"></div><!-- 空div -->
    <%= link_to "ユーザー登録", new_registration_path(resource_name) %>
    <%= link_to "facebookでログイン", user_facebook_omniauth_authorize_path  %>
    <%= link_to "googleでログイン", user_google_oauth2_omniauth_authorize_path  %>

</div>