<%= render "users/sidebar", user: current_user %>
<div class="container">
  <div class="row">

      <% @users.each do |user| %>
        <div class ="col-xs-3 box-content">
          <div>
            <%= link_to user, class: "user_#{user.id}" do %>
              <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "/images/no-image.jpg") %>
            <% end %>
          </div>
          <div>
            <%= user.name %>
          </div>
          <div>
            <%= user.place %>
          </div>
          <div>
            <!-- truncateは文字を丸めるヘルパー -->
          <%= truncate(user.introduction, length: 10) %>
          </div>
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %>
            <% end %>
          <% end %>


        </div>
    <% end %>
  </div>
</div>