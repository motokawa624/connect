  

        

<div class="clearfix">
  <% @users.each do |user| %>
      <div class="user-all-box">
        <div class="user-text">
          <%= link_to user, class: "user_#{user.id}" do %>
            <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "/assets/no_image.jpg", class: "img-circle") %>
          <% end %>
        </div>
        <div class="user-text">
          <p><%= user.name %></p>
        </div>
        <div class="user-text">
          <%= user.place %>
        </div>
        <div class="user-text">
          <!-- truncateは文字量を丸めるヘルパー -->
        <%= truncate(user.introduction, length: 10) %>
        </div>
        <div class="user-text">
          <% if current_user != user %>
            <% if current_user.following?(user) %>
              <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %>
            <% end %>
          <% end %>
        </div>
      </div>
  <% end %>
</div>



 


