		<%= render "users/sidebar", user: current_user %>



<div class="container">
	<h3 class="member-show-head">メンバー詳細</h3>
		<% if @user.id != current_user.id %>
	  <% if @is_room == true %>

	    <p><a href="/rooms/<%= @room_id %>">チャットへ</a></p>
	  <% else %>
	  	<%= form_with model: Room.new, url: rooms_path, method: :post, data: {remote: false} do |f| %>
	  	<!-- 　　　hidden_fieldでルームコントローラに飛ばしてユーザールームのストロングパラメータを使用する。 -->
		      <%= hidden_field_tag 'user_room[user_id]', @user.id %>
	    <%= f.submit "チャットを始める" %>
	  　<% end %>
	  <% end %>
	<% end %>
  <div class="row">

		<div class ="col-xs-12">
			<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
		</div>

		<div class ="col-xs-12">
			<%= @user.name %>
		</div>

		<div class ="col-xs-12">
			エリア<%= @user.place %>
		</div>

		<div class ="col-xs-12">
		    introduction
		    <%= @user.introduction %>
		</div>

			<div class ="col-xs-12">
				<% if current_user == @user %>
		    	<%= link_to '  プロフィールを編集する',edit_user_path(@user),class: " btn btn-default glyphicon glyphicon-wrench edit_user_#{@user.id}" %>
		    <% end %>
		  </div>

		  参加チーム
		  カウント
		    follows
		    <%= link_to @user.follower.count, user_follows_path(@user) %>
		  followers
		    <%= link_to @user.followed.count, user_followers_path(@user) %>

		<!-- フォローボタン -->
          <% if current_user != @user %>
            <% if current_user.following?(@user) %>
              <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete %>
            <% else %>
              <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST %>
            <% end %>
          <% end %>


	</div>
</div>